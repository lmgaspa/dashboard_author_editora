{
  "buildCommand": "ng build --configuration=production",
  "outputDirectory": "dist/dashboard-author-editora-frontend/browser",
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*\\.(?:js|mjs|css|png|jpg|jpeg|gif|svg|webp|ico|txt|json|woff|woff2|ttf|map))", "destination": "/$1" },
    { "source": "/", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(js|mjs|css)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "cleanUrls": true
}
